# This is a sample menu.lst file. You should make some changes to it.
# The old install method of booting via the stage-files has been removed.
# Please install GRLDR boot strap code to MBR with the bootlace.com
# utility under DOS/Win9x or Linux.

#color blue/green yellow/red white/magenta white/magenta
#gfxmenu /boot/gfxboot

color black/cyan yellow/cyan
splashimage /boot/grub4dos/boot_xpm.gz

timeout 10
default 0

title EduMagic_Home_profile_LXDE
#find --set-root --ignore-floppies --ignore-cd /MagOS/MagOS.sgn
kernel /MagOS/vmlinuz  root=/dev/ram0 rw vga=791 quiet changes=MagOS_save1.img desktop=lxde
initrd /MagOS/initrd.gz

title EduMagic_Home_profile_Gnome
#find --set-root --ignore-floppies --ignore-cd /MagOS/MagOS.sgn
kernel /MagOS/vmlinuz root=/dev/ram0 rw vga=788 quiet changes=MagOS_save1.img desktop=gnome
initrd /MagOS/initrd.gz

title EduMagic_Home_profile_KDE
#find --set-root --ignore-floppies --ignore-cd /MagOS/MagOS.sgn
kernel /MagOS/vmlinuz  root=/dev/ram0 rw vga=788 quiet changes=MagOS_save1.img desktop=kde
initrd /MagOS/initrd.gz

title EduMagic_Clean_LXDE
#find --set-root --ignore-floppies --ignore-cd /MagOS/MagOS.sgn
kernel /MagOS/vmlinuz  root=/dev/ram0 rw vga=791 quiet desktop=lxde
initrd /MagOS/initrd.gz

title EduMagic_Clean_Gnome
#find --set-root --ignore-floppies --ignore-cd /MagOS/MagOS.sgn
kernel /MagOS/vmlinuz root=/dev/ram0 rw vga=788 quiet desktop=gnome
initrd /MagOS/initrd.gz

title EduMagic_Clean_KDE
#find --set-root --ignore-floppies --ignore-cd /MagOS/MagOS.sgn
kernel /MagOS/vmlinuz  root=/dev/ram0 rw vga=788 quiet desktop=kde
initrd /MagOS/initrd.gz

title EduMagic_failsafe_LXDE
#find --set-root --ignore-floppies --ignore-cd /MagOS/MagOS.sgn
kernel /MagOS/vmlinuz root=/dev/ram0 rw noapic nolapic acpi=off nopat xdriver=vesa noload=/modules/ desktop=lxde
initrd /MagOS/initrd.gz

title Memtest
kernel /boot/tools/memtest

title Hardware_Detection_Tool
map /boot/tools/hdt.img (fd0)
map --hook
chainloader (fd0)+1
rootnoverify (fd0)
map --floppies=1

title Windows NT/2K/XP 
find --set-root --ignore-floppies --ignore-cd /ntldr
map () (hd0)
map (hd0) ()
map --rehook
find --set-root --ignore-floppies --ignore-cd /ntldr
chainloader /ntldr
savedefault --wait=2

title Windows VISTA/SEVEN/EIGTH
find --set-root --ignore-floppies --ignore-cd /bootmgr
map () (hd0)
map (hd0) ()
map --rehook
find --set-root --ignore-floppies --ignore-cd /bootmgr
chainloader /bootmgr
savedefault --wait=2

title Windows 9x/Me
find --set-root /io.sys
chainloader /io.sys
savedefault --wait=2

title Reboot
reboot
